  label.roll-label Roll on the Table
    block

mixin preview(opts, misc)
  if misc.no_title
    div
  else
    div.move-title.move-preview(data-i18n=opts.title)=locals[opts.title]
  if opts.roll
    div.roll-viewer
      if opts.progress
        +rollLabel
          +progressRoll(opts, 'hide-element')
      else if opts.oracle
        +rollLabel
          +oracleRoll(opts, 'hide-element')
      else if opts.rarity
        +rollLabel
          +rarityRoll(opts, 'hide-element')
      else if opts.owl
        +rollLabel
          +owlRoll(opts, 'hide-element')
      else if opts.discover_a_site
        +rollLabel
          +discoverASiteRoll(opts, 'hide-element')
      else if opts.delve_the_depths
        +rollLabel
          +delveTheDepthsRoll(opts, 'hide-element')
      else
        +rollLabel
          +movesRoll(opts, 'hide-element')
  .move-description
    block
  if opts.delve_the_depths
    +rollLabelTable
      +delveTheDepthsTableRoll(opts, 'hide-element')
  .oracle-footer.move-page-footer=opts.page

mixin container(opts, misc)
  if misc.visibility
    div.move-visible
      +preview(opts, misc)
        block
  else
    input(type='radio' name='attr_move_preview' class=`${opts.class} hide-element` value=opts.radio)
    div(class=`${opts.class} showhide`)
      +preview(opts, misc)
        block

mixin listButton(opts)
  if opts.no_quick_roll
    |
  else
    .button-container
      if opts.progress
        +progressRoll(opts, 'roll-show')
      else if opts.oracle
        +oracleRoll(opts, 'roll-show')
      else if opts.rarity
        +rarityRoll(opts, 'roll-show')
      else if opts.owl
        +owlRoll(opts, 'roll-show')
      else if opts.discover_a_site
        +discoverASiteRoll(opts, 'roll-show')
      else
        +movesRoll(opts, 'roll-show')