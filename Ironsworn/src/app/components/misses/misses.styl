.misses-track
  margin-top 1em
  width 47em
  margin-left 118px
  .progress-row
    grid-template-columns: 86px repeat(10, 43.5px) 110px;

.clear-miss
  display: inline
  width: 100%
  font-weight: bold
  font-size: 14px
  padding 0
  margin 1em
  height 40px
  padding 0.2em 0.2em 0.2em 0.2em
  border: 2px solid #494a4c
  cursor: pointer

.clear-miss:hover
  background-color: #ccc
  color: #4C4D4F
  transition .5s ease

.miss-input
  margin 0 !important

.failure-btn-div
  display inline

input.optional-track-failures:checked ~ div.optional-track-failures
  show-hide(0.3s)