include templates/_mixins
// === SHEET === 
.grid-main
    // Name
    .layout.layout--stat.name
        h3.u-font-medium.u-font-heading Name
        input.o-input-text.u-w100(name="attr_name")
    // Background
    .layout.layout--stat.background
        h3.u-font-medium.u-font-heading Background
        input.o-input-text.u-w100(name="attr_background")
    // Special
    .layout.layout--stat.special
        h3.u-font-medium.u-font-heading Special
        textarea.o-input-textarea(name="attr_special", rows=4)
    .layout.stats
        .grid-stats
            // Stat - Skill
            .layout.layout--stat.stat-skill
                .grid-stat
                    h3.grid-stat-item-title.u-font-large.u-font-heading Skill
                    span.grid-stat-item-icon.u-font-icon.u-success L
                    include templates/_stat-skill
            // Stat - Stamina
            .layout.layout--stat.stat-stamina
                .grid-stat
                    h3.grid-stat-item-title.u-font-large.u-font-heading Stamina
                    span.grid-stat-item-icon.u-font-icon.u-fail-dark k
                    include templates/_stat-stamina
            // luck
            .layout.layout--stat.stat-luck
                .grid-stat
                    h3.u-font-large.u-font-heading Luck
                    span.grid-stat-item-icon.u-font-icon.u-luck S
                    include templates/_stat-luck
    // Adv Skills & Spells
    .layout.layout--stat.skills
        .layout-heading.u-flex.u-flex-justify-between
            h3.u-font-medium.u-font-heading Advanced Skills & Spells
            .layout-heading-modifier
                .grid-modifier.u-flex.u-flex-align-center
                    h3.grid-modifier-title.u-font-small.u-font-heading.u-mr-small Roll Modifier
                    +buttonsGridSub("SkillRoll")
                    .grid-modifier-input
                        +attrInput("o-input-modifier","number", "skillRollModifier",false,"0")
                    +buttonsGridAdd("SkillRoll")
        include templates/_skills
    // Weapons
    .layout.layout--stat.weapons
        .layout-heading.u-flex.u-flex-justify-between
            h3.u-font-medium.u-font-heading Weapons
            .layout-heading-modifier
                .grid-modifier.u-flex.u-flex-align-center
                    h3.grid-modifier-title.u-font-small.u-font-heading.u-mr-small Roll Modifier
                    +buttonsGridSub("DamageRoll")
                    .grid-modifier-input
                        +attrInput("o-input-modifier","number","damageRollModifier",false,0)
                    +buttonsGridAdd("DamageRoll")
        include templates/_weapons
    // Inventory
    .layout.layout--stat.inventory
        h3.layout-heading.u-font-medium.u-font-heading Inventory
        include templates/_inventory
    // Wearing
    .layout.layout--stat.wearing
        h4.layout-heading.u-font-medium.u-font-heading Wearing
        textarea.o-input-textarea(name="attr_inventory_wearing", rows=6)
    // Monies
    .layout.layout--stat.monies
        h4.layout-heading.u-font-medium.u-font-heading Monies
        textarea.o-input-textarea(name="attr_inventory_monies", rows=6)
    // Provisions
    .layout.layout--stat.provisions
        h4.layout-heading.u-font-medium.u-font-heading Provisions
        include templates/_provisions
    // Footer
    .layout.footer.u-text-right
        p.u-font-tiny v1.01

include templates/_rolltemplates
// === WORKERS ===
script(type="text/worker")
    include js/sheetworkers.js
